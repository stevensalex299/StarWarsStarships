@model Starship

@{
    ViewBag.Title = "Delete";
}

<div class="container mt-4">
    <h1 class="mb-4 text-danger">Delete Starship</h1>

    <div class="card border-danger mb-4">
        <div class="card-body">
            <h5 class="card-title text-danger">@Model.Name</h5>
            <p class="card-text"><strong>Model:</strong> @Model.Model</p>
            <p class="card-text"><strong>Class:</strong> @Model.StarshipClass</p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="StarshipId" />
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
